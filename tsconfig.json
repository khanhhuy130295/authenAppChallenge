{
  "include": [
    "server/**/*",
    "client/**/*",
    "test/*"
  ],
  "exclude": [
    "node_modules",
    // "**/*spec.ts",
    // "test",
    "dist"
  ],
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "suppressImplicitAnyIndexErrors": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    // "sourceMap": true,
    // "outDir": "./dist",
    // "removeComments": true,
  }
}
